<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wangzhen.dao.OrderSettingDao">
    <insert id="add" parameterType="orderSetting">
        insert into t_ordersetting (number,orderDate) values (#{number},#{orderDate})
    </insert>
    <update id="editNumberByOrderDate" parameterType="orderSetting">
        update t_ordersetting set number=#{number} where orderDate=#{orderDate}
    </update>
    <update id="editReservationsByOrderDate" parameterType="orderSetting">
        update t_ordersetting set reservations =#{reservations} where orderDate=#{orderDate}
    </update>

    <select id="findCountByOrderDate" resultType="long" parameterType="date">
        select count(*) from t_ordersetting where orderDate=#{orderDate}
    </select>


    <select id="getOrderSettingByMonth" resultType="orderSetting" parameterType="map">
        select * from t_ordersetting where orderDate between #{dateBegin} and #{dateEnd}
    </select>
    <select id="findByOrderDate" resultType="cn.wangzhen.domain.OrderSetting" parameterType="date">
        select * from t_ordersetting where orderDate=#{date}
    </select>
</mapper>